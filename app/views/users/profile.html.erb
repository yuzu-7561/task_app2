<div class="user-container">
    <div class="user-nav">
        <ul>
            <li><%= link_to "アカウント", users_account_path %></li>
            <li class="user-view-active-li"><%= link_to "プロフィール", users_profile_path, class: 'user-view-active-a' %></li>
        </ul>
    </div>
    <div class="user-view">
        <%= render "shared/error", obj: @user %>
        <div class="user-view-box">
            <h6 class="user-view-title-profile">プロフィール</h6>
            <div class="icon-box">
                <%if @user.image.attached? %>
                    <%= image_tag(rails_blob_path(@user.image), class: 'icon-img') %>
                <% else %>
                    <img alt="アイコン画像", class="icon-img" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg">
                <% end %>
            </div>
            <%= form_with model: @user do |f| %>
                <div>
                    <table class="profile-table">
                        <tr>
                            <th><%= f.label :image, "アイコン画像" %></th>
                            <td><%= f.file_field :image %></td>
                        </tr>
                        <tr>
                            <th><%= f.label :name, "名前", class: 'form-require-after' %></th>
                            <td><%= f.text_field :name %></td>
                        </tr>
                        <tr>
                            <th><%= f.label :introduction, "自己紹介"%></th>
                            <td><%= f.text_area :introduction %></td>
                        </tr>
                    </table>
                    <div class="user-view-btn">
                        <%= f.submit "更新" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
