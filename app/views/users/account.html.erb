<div class="user-container">
    <div class="user-nav">
        <ul>
            <li class="user-view-active-li"><%= link_to "アカウント", users_account_path, class: 'user-view-active-a' %></li>
            <li><%= link_to "プロフィール", users_profile_path %></li>
        </ul>
    </div>
    <div class="user-view">
        <div class="user-view-box">
            <h6 class="user-view-title">アカウント</h6>
            <table class="account-table">
                <tr>
                    <th>メールアドレス</th>
                    <td><%= @email %></td>
                </tr>
                <tr>
                    <th>パスワード</th>
                    <td>********</td>
                </tr>
            </table>
            <ul class="user-view-btn">
                <li class="user-edit-btn"><%= link_to "編集", edit_user_registration_path %></li>
            </ul>
        </div>
    </div>
</div>
