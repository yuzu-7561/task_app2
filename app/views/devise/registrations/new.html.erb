<div class="devise-container">
  <div class="devise-inner">
    <p>新しいアカウントを作成</p>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!-- <%= render "devise/shared/error_messages", resource: resource %> -->
    
      <div class="field">
        <div class="form-require"></div>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前" %>
      </div>
    
      <div class="field">
        <div class="form-require"></div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>
    
      <div class="field">
        <div class="form-require"></div>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
      </div>
    
      <div class="field">
        <div class="form-require"></div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新しいアカウントを作成" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>
